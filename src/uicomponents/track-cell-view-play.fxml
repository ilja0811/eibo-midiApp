<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="60.0" maxWidth="744.0" minHeight="60.0" minWidth="744.0" prefHeight="60.0" prefWidth="744.0" stylesheets="@../resources/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uicomponents.TrackCellViewPlayController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="744.0" spacing="10.0">
         <children>
            <Label fx:id="trackIndexLabel" alignment="CENTER" maxWidth="15.0" minWidth="15.0" text="#" textAlignment="CENTER">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label fx:id="trackName" minWidth="-Infinity" prefHeight="30.0" prefWidth="250.0" styleClass="track-label" text="Track">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                     <graphic>
                        <Label text="Track:">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <padding>
                              <Insets right="2.5" />
                           </padding>
                        </Label>
                     </graphic>
                  </Label>
                  <Label fx:id="instrName" minWidth="-Infinity" prefHeight="30.0" prefWidth="200.0" styleClass="track-label" text="Instrument">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                     <graphic>
                        <Label text="Instrument:">
                           <padding>
                              <Insets right="2.5" />
                           </padding>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                     </graphic>
                  </Label>
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="209.0">
                     <children>
                        <ToggleButton fx:id="muteButton" maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" mnemonicParsing="false">
                           <graphic>
                              <ImageView fx:id="muteButtonImg" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../assets/outline_volume_up_white_48dp.png" />
                                 </image>
                              </ImageView>
                           </graphic></ToggleButton>
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="15.0" right="15.0" />
         </padding>
      </HBox>
   </children>
</Pane>
